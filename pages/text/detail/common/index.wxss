/* pages/image/detail/index.wxss */


page{
background-color:#eee;
}

.topImage{
  background-color:#fff;

}

.topImage image{
  width:100%;
}

.pageContainer{
  display: flex;
  flex-direction: column;
}



.result{
  display: flex;
  flex-direction: column;
  margin-top:30rpx;
}

.info{
  padding-left:30rpx;
  padding-right:30rpx;
  background-color:#fff;
  min-height:70rpx;
  display: flex;
  align-items: center;
}

.info .label{
  font-size:15px;
  width:20%;
}

.info .desc{
  font-size:14px;
  color:#8a8a8a;
  width:70%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  
}

.info .copy{
  width:10%;
  font-size:14px;
  padding:5rpx;
  color:#F0E68C;
  border:1px solid #F0E68C;
  margin-left:10rpx;
  text-align: center;
}

.copyAll{
  margin-top:20rpx;
}

.copyAll button{
  background-color: #F0E68C;
}